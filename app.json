{
  "expo": {
    "name": "Mon Confinement",
    "slug": "mon-confinement",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "myapp",
    "backgroundColor": "#FCF8F3",
    "splash": {
      "image": "./assets/images/icon-splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#DF7861"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/images/icon.png"
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    }, 
    "android": {
      "icon": "./assets/images/icon.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon-white.png",
        "backgroundColor": "#DF7861"
      }
    }, 
    "androidStatusBar": {
      "barStyle": "light-content",
      "backgroundColor": "#986357"
    }
  }
}
